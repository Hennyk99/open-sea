  "devDependencies": {
    "eslint": "^4.6.1",
    "eslint-config-synacor": "^1.1.1",
    "if-env": "^1.0.0",
    "node-sass": "^4.5.3",
    "preact-cli": "^1.4.1",
    "sass-loader": "^6.0.6"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "material-ui-icons": "^1.0.0-beta.5",
    "preact": "^8.2.5",
    "preact-compat": "^3.17.0",
    "preact-material-components": "^1.1.6",
    "preact-router": "^2.5.7",
    "react-swipeable": "^4.1.0"
  }
