{
	"type": "object",
	"properties": {
		"name": { "type": "string" },
		"description": { "type": "string" },
		"version": { "type": "string" },
		"categories": {
			"type": "object",
			"additionalProperties": {
				"type": "object",
				"properties": {
					"name": { "type": "string" }
				}
			}
		},
		"certifications": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"description": { "type": "string" },
					"colour": { "type": "string" },
					"level": { "type": "number" },
					"requirements": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"indicator": { "type": "string" },
								"operator": {
									"type": "string",
									"enum": [ ">", ">=", "<", "<=", "==", "IN", "NOT IN" ]
								},
								"value": {
									"anyOf": [
										{ "type": "string" },
										{ "type": "number" },
										{
											"type": "array",
											"items": { "type": "string" }
										}
									]
								}
							},
							"additionalProperties": false,
							"required": [ "indicator", "operator", "value" ]
						}
					}
				},
				"additionalProperties": false,
				"required": [ "name", "requirements" ]
			}
		},
		"metrics": {
			"type": "object",
			"additionalProperties": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"help": { "type": "string" },
					"type": {
						"type": "string",
						"enum": [ "text", "number", "list", "likert" ]
					}
				},
				"required": [ "name", "type" ]
			}
		},
		"indicators": {
			"type": "object",
			"additionalProperties": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"description": { "type": "string" },
					"category": { "type": "string" },
					"type": {
						"type": "string",
						"enum": [ "text", "number", "percentage", "list" ]
					},
					"value": { "type": "string" }
				},
				"required": [ "name", "type" ]
			}
		},
		"reportItems": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"chart": {
						"type": "object",
						"properties": {
							"colors": {
								"type": "array",
								"items": { "type": "string" }
							},
							"data": {
								"type": "array",
								"items": { "type": "string" }
							},
							"type": {
								"type": "string",
								"enum": [ "line", "bar", "scatter", "pie", "percentage" ]
							}
						},
						"additionalProperties": false,
						"required": [ "data", "type" ]
					},
					"value": { "type": "string" },
					"width": {
						"type": "number",
						"default": 100
					}
				},
				"required": [ "name", "width" ]
			}
		}
	},
	"required": [ "metrics", "indicators" ]
}
