			"type": "object",
			"additionalProperties": {
				"type": "object",
				"properties": {
					"name": { "type": "string" },
					"help": { "type": "string" },
					"type": {
						"type": "string",
						"enum": ["text", "number", "list", "likert" ]
					}
				},
				"required": ["name", "help", "type"]
			}
